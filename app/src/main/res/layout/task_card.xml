<?xml version="1.0" encoding="utf-8"?>
<com.application.jorge.whereappu.Cards.TaskItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactCard"
        style="@style/MainCardView"
        android:background="@color/blue_semi_transparent"
        card_view:cardCornerRadius="@dimen/card_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/senderPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:padding="@dimen/small_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_material_account_box" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout2">

            </LinearLayout>


            <ImageView
                android:id="@+id/statusIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end|top"
                android:src="@drawable/icon_material_done_all"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/date"/>

            <ImageView
                android:id="@+id/typeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end|top"
                android:src="@drawable/icon_material_refresh"
                android:layout_alignBottom="@+id/senderName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:text="sdfdasfasdfasd "
                android:textColor="@color/description_color"
                android:textSize="@dimen/description_size"
                android:layout_below="@+id/senderName"
                android:layout_toEndOf="@+id/senderPhoto"
                android:layout_toLeftOf="@+id/typeIcon"
                android:layout_toStartOf="@+id/typeIcon" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:text="29/20/21"
                android:background="@color/light_gray_half_transparent"
                android:textColor="@color/description_color"
                android:textSize="@dimen/description_size"
                android:layout_below="@+id/body"
                android:layout_toEndOf="@+id/senderPhoto" />

            <TextView
                android:id="@+id/senderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/small_padding"
                android:textColor="@color/black_button"
                android:textSize="20dp"
                tools:text="Title"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/senderPhoto"
                android:layout_toEndOf="@+id/senderPhoto" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.application.jorge.whereappu.Cards.TaskItemView>