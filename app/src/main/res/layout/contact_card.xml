<?xml version="1.0" encoding="utf-8"?>
<com.application.jorge.whereappu.Cards.ContactItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainLayout">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactCard"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        android:background="@color/blue_semi_transparent"
        style="@style/MainCardView">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/photo"
                android:padding="@dimen/small_padding"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_material_account_box"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:id="@+id/nameEdit"
                    android:textColor="@color/black_button"
                    android:paddingLeft="@dimen/big_padding"
                    android:paddingTop="@dimen/small_padding"
                    tools:text="Title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/lastMessage"
                    android:paddingLeft="@dimen/small_padding"
                    android:textSize="@dimen/description_size"
                    android:textColor="@color/description_color"
                    tools:text="Lorem ipsum dolor sit amet"/>

            </LinearLayout>

            <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/statusIcon"
                        android:src="@drawable/icon_material_done_all"
                        android:layout_gravity="bottom|right"/>

                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/typeIcon"
                        android:layout_gravity="right|top"
                        android:src="@drawable/icon_material_refresh"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.application.jorge.whereappu.Cards.ContactItemView>