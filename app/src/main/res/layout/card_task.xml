<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	style="@style/cardStyle"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	card_view:cardElevation="@dimen/tiny_padding"
	android:focusable="true"
	android:background="@drawable/wau_card">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?android:attr/selectableItemBackground">

		<ImageView
			android:id="@+id/senderPhoto"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:adjustViewBounds="true"
			android:contentDescription="@null"
			android:padding="@dimen/small_padding"
			android:scaleType="fitCenter"
			android:src="@drawable/icon_material_account_box"/>

		<LinearLayout
			android:id="@+id/linearLayout2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

		</LinearLayout>


		<ImageView
			android:id="@+id/statusIcon"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_alignBottom="@+id/createdOnDate"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="end|top"
			android:src="@drawable/icon_material_done_all"/>

		<ImageView
			android:id="@+id/typeIcon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignTop="@+id/senderName"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_gravity="end|top"
			android:src="@drawable/icon_material_refresh"/>

		<TextView
			android:id="@+id/body"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_below="@+id/senderName"
			android:layout_toEndOf="@+id/senderPhoto"
			android:layout_toLeftOf="@+id/typeIcon"
			android:layout_toStartOf="@+id/typeIcon"
			android:paddingLeft="@dimen/small_padding"
			android:paddingRight="@dimen/small_padding"
			android:text="sdfdasfasdfasd\nhola qye tal "
			android:textColor="@color/description_color"
			android:textSize="@dimen/description_size"/>

		<TextView
			android:id="@+id/createdOnDate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/body"
			android:layout_toEndOf="@+id/senderPhoto"
			android:background="#4700b5ff"
			android:layout_marginStart="@dimen/small_padding"
			android:layout_marginEnd="@dimen/small_padding"
			android:padding="1dp"
			android:text="Created on: 29/20/21"
			android:textColor="@color/description_color"
			android:textSize="10sp"/>

		<TextView
			android:id="@+id/senderName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toEndOf="@+id/senderPhoto"
			android:layout_toRightOf="@+id/senderPhoto"
			android:paddingLeft="@dimen/small_padding"
			android:textColor="@color/black"
			android:textSize="16sp"
			tools:text="Title"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>