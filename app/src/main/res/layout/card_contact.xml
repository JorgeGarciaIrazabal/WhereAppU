<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/frontItemLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/cardStyle"
	card_view:cardCornerRadius="6dp"
	card_view:cardElevation="@dimen/tiny_padding"
	android:focusable="true"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/photo"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:adjustViewBounds="true"
			android:contentDescription="@null"
			android:padding="@dimen/small_padding"
			android:scaleType="fitCenter"
			android:src="@drawable/icon_material_account_box"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/nameEdit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/small_padding"
				android:paddingTop="@dimen/tiny_padding"
				android:textColor="@color/black_button"
				android:textSize="18sp"
				tools:text="Title"/>

			<TextView
				android:id="@+id/lastMessage"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/small_padding"
				android:textColor="@color/description_color"
				android:textSize="@dimen/description_size"
				tools:text="Lorem ipsum dolor sit amet"/>

		</LinearLayout>

		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/statusIcon"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_gravity="bottom|end"
				android:src="@drawable/icon_material_done_all"/>

			<ImageView
				android:id="@+id/typeIcon"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_gravity="end|top"
				android:src="@drawable/icon_material_refresh"/>

		</FrameLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>
