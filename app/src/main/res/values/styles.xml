<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
	    <item name="android:windowActionBar">false</item>
	    <item name="android:windowNoTitle">true</item>
    </style>
    <style name="button_menu">
		<item name="android:layout_height">@dimen/button_menu_height</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_alignParentBottom">true</item>
	</style>

    <style name="button_menu_element">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:background">@drawable/wau_button_menu</item>
	</style>

    <style name="button_menu_element.contact">
		<item name="android:src">@drawable/ic_search_24</item>
	</style>

	<style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

	<style name="FloatingActionMenuStyle">
		<item name="fam_threshold">@dimen/float_action_threshold</item>
		<item name="fam_gap">@dimen/float_action_item_gap</item>
		<item name="fam_horizontalPadding">@dimen/float_action_h_padding</item>
		<item name="fam_verticalPadding">@dimen/float_action_v_padding</item>
		<item name="android:animationDuration">300</item>
		<item name="android:interpolator">@android:anim/decelerate_interpolator</item>
		<item name="fam_gravity">10</item>
		<item name="fam_direction">horizontal</item>
	</style>

	<style name="FloatingActionMenuItemStyle">
		<item name="android:padding">@dimen/float_action_item_padding</item>
		<item name="fam_item_background">@drawable/custom_item_background_selector</item>
	</style>

	<style name="FloatingActionMenuItemStyle.Square">
		<item name="fam_item_background">@android:color/white</item>
	</style>

	<style name="FloatingActionMenuStyle.Horizontal">
		<item name="fam_gravity">10</item>
		<item name="fam_direction">vertical</item>
	</style>

	<style name="cardStyle">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginBottom">@dimen/small_padding</item>
		<item name="android:layout_marginLeft">@dimen/small_padding</item>
		<item name="android:layout_marginRight">@dimen/small_padding</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>

</resources>
